// Returns the name for an MBR partition type ID.
export fn mbr_parttype_name(id: u8) const str = {
	// TODO: bsearch
	for (let i = 0z; i < len(mbr_parttab); i += 1) {
		const (cand, name) = mbr_parttab[i];
		if (cand == id) {
			return name;
		};
	};
	return "Unknown";
};
